# Database (for docker-compose use host=db; for local dev use localhost)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/meetings_room?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Registration allowed only for emails with this domain (e.g. @company.com). Comma-separated for multiple.
ALLOWED_DOMAIN="@company.com"

# SMTP for sending verification code on sign-up (e.g. Yandex, SendGrid)
SMTP_HOST="smtp.example.com"
SMTP_PORT="465"
SMTP_USER="noreply@example.com"
SMTP_PASSWORD="app-password"
SMTP_FROM="Booking Service <noreply@example.com>"
